{
  "name": "Party Trick",
  "description": "You can pull mobs towards you by clicking your secondary keybind",
  "type": "origins:multiple",
  "action": {
    "type": "origins:active_self",
    "cooldown": 1,
    "key": {
      "key": "key.origins.secondary_active"
    },
    "entity_action": {
      "type": "origins:raycast",
      "distance": 64,
      "block": true,
      "entity": true,
      "shape_type": "collider",
      "fluid_handling": "none",
      "before_action": {
        "type": "origins:play_sound",
        "sound": "minecraft:item.trident.throw",
        "volume": 0,
        "pitch": 0
      }
    }
  },
  "interval": {
    "type": "origins:resource",
    "min": 0,
    "max": 8,
    "max_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:change_resource",
          "resource": "*:*_interval",
          "change": 0,
          "operation": "set"
        },
        {
          "type": "origins:change_resource",
          "resource": "*:healing_harddamage",
          "change": -1
        },
        {
          "type": "origins:change_resource",
          "resource": "*:healing_decay",
          "change": 40,
          "operation": "set"
        }
      ]
    },
    "start_value": 0,
    "hud_render": {
      "should_render": false
    }
  },
  "always": {
    "type": "origins:active_self",
    "cooldown": 1,
    "key": {
      "key": "key.origins.secondary_active",
      "continuous": true
    },
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:if_else",
          "condition": {
            "type": "origins:relative_health",
            "comparison": "!=",
            "compare_to": 1
          },
          "if_action": {
            "type": "origins:change_resource",
            "resource": "*:*_interval",
            "change": 1
          }
        },
        {
          "type": "origins:raycast",
          "distance": 64,
          "block": true,
          "entity": true,
          "shape_type": "collider",
          "fluid_handling": "none",
          "bientity_action": {
            "type": "origins:and",
            "actions": [
              {
                "type": "origins:target_action",
                "action": {
                  "type": "origins:apply_effect",
                  "effects": [
                    {
                      "effect": "minecraft:slowness",
                      "duration": 15,
                      "amplifier": 3
                    },
                    {
                      "effect": "minecraft:weakness",
                      "duration": 15,
                      "amplifier": 1
                    }
                  ]
                }
              },
              {
                "type": "origins:if_else",
                "condition": {
                  "type": "origins:target_condition",
                  "condition": {
                    "type": "origins:or",
                    "conditions": [
                      {
                        "type": "origins:attribute",
                        "attribute": "minecraft:generic.max_health",
                        "comparison": ">",
                        "compare_to": 20.0
                      },
                      {
                        "type": "origins:living",
                        "inverted": true
                      }
                    ]
                  }
                },
                "if_action": {
                  "type": "origins:invert",
                  "action": {
                    "type": "origins:if_else",
                    "condition": {
                      "type": "origins:distance",
                      "comparison": "<=",
                      "compare_to": 1.7
                    },
                    "if_action": {
                      "type": "origins:target_action",
                      "action": {
                        "type": "origins:add_velocity",
                        "x": 0,
                        "y": 0.1,
                        "z": 0,
                        "set": true
                      }
                    },
                    "else_action": {
                      "type": "origins:add_velocity",
                      "x": 0,
                      "y": 0.1,
                      "z": -1,
                      "set": true
                    }
                  }
                },
                "else_action": {
                  "type": "origins:and",
                  "actions": [
                    {
                      "type": "origins:if_else",
                      "condition": {
                        "type": "origins:distance",
                        "comparison": "<=",
                        "compare_to": 1.7
                      },
                      "if_action": {
                        "type": "origins:target_action",
                        "action": {
                          "type": "origins:add_velocity",
                          "x": 0,
                          "y": 0.1,
                          "z": 0,
                          "set": true
                        }
                      },
                      "else_action": {
                        "type": "origins:add_velocity",
                        "x": 0,
                        "y": 0.1,
                        "z": -1,
                        "set": true
                      }
                    },
                    {
                      "type": "origins:actor_action",
                      "action": {
                        "type": "origins:add_velocity",
                        "x": 0,
                        "y": 0.1,
                        "z": 0,
                        "set": true
                      }
                    }
                  ]
                }
              }
            ]
          },
          "before_action": {
            "type": "origins:play_sound",
            "sound": "minecraft:block.grass.hit",
            "volume": 0,
            "pitch": 0
          }
        }
      ]
    }
  }
}